{
	"extends": [
		"../../../.eslintrc.json"
	],
	"ignorePatterns": [
		"!**/*"
	],
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"parserOptions": {
				"project": [
					"libs/frontend/auth/tsconfig.json"
				]
			},
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "util",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "util",
						"style": "kebab-case"
					}
				]
			},
			"extends": [
				"plugin:@nrwl/nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			]
		},
		{
			"files": [
				"*.html"
			],
			"extends": [
				"plugin:@nrwl/nx/angular-template"
			],
			"rules": {}
		}
	]
}
